<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:bottomRightRadius="5dp" />

            <stroke
                android:width="4dp"
                android:color="@color/base_pink" />

            <solid android:color="@color/tainted_peach" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners android:bottomRightRadius="5dp" />

            <stroke
                android:width="2dp"
                android:color="@color/tainted_peach" />

            <solid android:color="@color/tainted_peach" />
        </shape>
    </item>

</layer-list>