<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- Background for slot machine -->

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />

            <!-- Strokes between the rows -->

            <stroke
                android:width="1dp"
                android:color="@color/base_pink" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="4dp"
        android:right="4dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <solid android:color="#ffffff" />
        </shape>
    </item>

</layer-list>