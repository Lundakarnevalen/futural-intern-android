<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:layout_gravity="fill_horizontal">
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/wrapper">
        <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="wrap_content"
            android:id="@+id/menu_drawer_toggle_wrapper"
            android:layout_alignParentLeft="true"
            android:clickable="true">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/drawer_toggle_icon"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/horizontal_margin"
                android:id="@+id/drawer_toggle_icon"/>
            <RelativeLayout
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:background="@drawable/inbox_indicator_bg"
                android:id="@+id/inbox_indicator_wrapper"
                android:layout_toRightOf="@id/drawer_toggle_icon"
                android:layout_above="@id/drawer_toggle_icon"
                android:layout_marginLeft="-9dp"
                android:layout_marginBottom="-9dp">
                <se.lundakarnevalen.widget.LKTextView 
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/inbox_indicator"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="#FFFFFF"
                    android:padding="0dp"
                    android:textSize="10sp"
                    android:text="1"/>
            </RelativeLayout>
        </RelativeLayout>
	    <se.lundakarnevalen.widget.LKTextView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/title"
	        android:textColor="#FFFFFF"
	        android:gravity="center"
	        android:layout_centerHorizontal="true"
	        android:layout_centerVertical="true"
	        android:textSize="15sp"
	        android:text="Lundakarnevalen"/>
         <ImageView 
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:id="@+id/action_bar_logo"
	        android:layout_marginTop="@dimen/vertical_margin"
	        android:layout_marginBottom="2dp"
	        android:layout_centerHorizontal="true"
			android:layout_alignParentBottom="true"
	        android:src="@drawable/top_logo_white"
	        android:visibility="gone"/>
    </RelativeLayout>
    
    <RelativeLayout 
            android:layout_height="fill_parent"
            android:layout_width="32dp"
            android:id="@+id/gps_checkbox"
            android:layout_alignParentRight="true"
            android:visibility="gone"
            android:layout_marginRight="@dimen/horizontal_margin"
            android:clickable="true">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gps_box"
                android:layout_centerVertical="true"
                android:id="@+id/gps_box"
                />
            <ImageView
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gps_box_shadow"
                android:layout_centerVertical="true"
                android:layout_marginTop="-8dp"

                android:layout_below="@id/gps_box"
                />
   			<ImageView
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/gps_checkmark"
                android:layout_centerVertical="true"
                android:id="@+id/gps_checkmark"
                />
                <se.lundakarnevalen.widget.LKTextView 
                    android:layout_width="32dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/gps_text"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentTop="true"
                    
                    android:textColor="#FFFFFF"
                    android:padding="0dp"
                    android:textSize="10sp"
                    android:text="GPS"
                    />
        
            
            </RelativeLayout>
	    
    
</RelativeLayout>
