<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/horizontal_margin_double"
        android:layout_marginRight="@dimen/horizontal_margin_double"
        android:paddingBottom="@dimen/vertical_margin"
        android:paddingTop="@dimen/vertical_margin" >

        <se.lundakarnevalen.widget.LKTextViewFat
            android:id="@+id/Section_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="32sp" />

        <ImageView
            android:id="@+id/Section_icon"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@id/Section_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp" />

        <se.lundakarnevalen.widget.LKTextView
            android:id="@+id/section_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Section_icon"
            android:textColor="#FFFFFF"
            android:textSize="19sp" />

        <se.lundakarnevalen.widget.LKButtonGreen
            android:id="@+id/section_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/section_information"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/vertical_margin"
            android:text="@string/Section_button"
            android:textSize="@dimen/sections_button_text_size" />
    </RelativeLayout>

</ScrollView>