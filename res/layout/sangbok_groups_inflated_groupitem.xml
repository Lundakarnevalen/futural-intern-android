<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="60dp"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingTop="10dp" >

    <Button
        android:id="@+id/sangbok_groups_inflated_groupitem_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_selector_white"
        android:gravity="center"
        android:text="NAME"
        android:drawableBottom="@drawable/songs_shadow"
        android:textColor="@color/dark_peach"
        android:textSize="20sp"
        android:textStyle="bold" />

   

    <TextView
        android:id="@+id/sangbok_groups_inflated_groupitem_nbr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/songs_page_nbr_box"
        android:gravity="center"
        android:text="4"
        android:layout_alignParentRight="true"
    	android:layout_centerVertical="true"
        android:drawableBottom="@drawable/songs_page_nbr_shadow"
        android:textColor="#FFF"
        android:textSize="12sp"
        android:textStyle="bold" />


</RelativeLayout>