<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
	android:layout_height="match_parent" >
	
	<RelativeLayout
	    android:paddingLeft="@dimen/horizontal_margin"
    	android:paddingRight="@dimen/horizontal_margin"
    	android:paddingTop="@dimen/vertical_margin"
    	android:paddingBottom="@dimen/vertical_margin"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:background="@color/bg_peach" >
	    <ImageView
	        android:id="@+id/imageView1"
	    	android:src="@drawable/reg_title"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
			android:paddingLeft="@dimen/horizontal_margin"
			android:paddingRight="@dimen/horizontal_margin"
			android:layout_alignParentTop="true" 
	    	android:contentDescription="@string/registration_hurra" />
	    <RelativeLayout 
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:layout_centerHorizontal="true"
	        android:layout_width="wrap_content"
	      	android:layout_height="wrap_content"
	      	android:id="@+id/lKCombinedTexts"
			android:layout_below="@id/imageView1" >  
	    	<se.lundakarnevalen.widget.LKTextViewBold
	        	android:id="@+id/lKTextViewBold1"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:textColor="#FFFFFF"
	        	android:text="@string/registration_status" 
	        	android:layout_marginRight="5dp"/>
	    	<se.lundakarnevalen.widget.LKTextView
	        	android:id="@+id/lKTextView1"
	        	android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_toRightOf="@+id/lKTextViewBold1"
	        	android:textColor="#FFFFFF"
	        	android:text="@string/registration_informationb4progessbar" /> 	
	    </RelativeLayout>
	    <LinearLayout
	        android:id="@+id/progress_bar_wrapper"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
	        android:layout_below="@id/lKCombinedTexts"	        
	        android:layout_marginTop="@dimen/vertical_margin_half" >
	       	<se.lundakarnevalen.widget.LKProgressBar
	    		android:id="@+id/lKProgressBar1"
	    		android:layout_width="wrap_content"
	    		android:layout_weight="1.0"
	    		android:layout_gravity="center_vertical"
	    		android:layout_height="@dimen/progress_bar_height"
	    		android:progress="1" /> 
	    	<se.lundakarnevalen.widget.LKTextView
	    	    android:textColor="#FFFFFF"
	    	    android:id="@+id/progress_value"	    		
	    	    android:layout_gravity="center_vertical"
	    	    android:layout_width="wrap_content"
	    	    android:layout_height="wrap_content"
	    	    android:layout_marginLeft="@dimen/horizontal_margin_half"
	    	    android:text="1 %"/>
	    </LinearLayout>
	    
	    
	    <se.lundakarnevalen.widget.LKTextView
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:id="@+id/lKTextView2"
	       	android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:layout_below="@id/progress_bar_wrapper"
	       	android:layout_centerHorizontal="true"
	       	android:textColor="#FFFFFF"
	       	android:text="@string/registration_informationafterorigressbar1"  />
	    
	    <se.lundakarnevalen.widget.LKTextViewBold 
	        android:layout_marginTop="@dimen/vertical_margin"
	        android:id="@+id/lKTextViewBold2"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/lKTextView2"
	        android:textColor="#FFFFFF"
	        android:text="@string/registration_yourcreedentials" />
	    
	    <se.lundakarnevalen.widget.LKEditText
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:id="@+id/lKEditTextName"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/lKTextViewBold2" 
	        android:textColor="#FFFFFF"
	        android:textColorHint="@color/bg_peach"
	        android:hint="@string/name" />

	    <se.lundakarnevalen.widget.LKEditText
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:id="@+id/lKEditTextEmail"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/lKEditTextName" 
	        android:textColor="#FFFFFF"
	        android:textColorHint="@color/bg_peach"
	        android:inputType="textEmailAddress"
	        android:hint="@string/email" />
	    <se.lundakarnevalen.widget.LKEditText
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:id="@+id/lKEditTextConfirmEmail"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/lKEditTextEmail" 
	        android:textColor="#FFFFFF"
	        android:textColorHint="@color/bg_peach"
	        android:inputType="textEmailAddress"
	        android:hint="@string/confirm_email" />
	
	    <se.lundakarnevalen.widget.LKEditText
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:id="@+id/lKEditTextPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/lKEditTextConfirmEmail"
	        android:textColor="#FFFFFF"
			android:textColorHint="@color/bg_peach"
			android:inputType="textPassword"
	        android:hint="@string/password" />
	    <se.lundakarnevalen.widget.LKEditText
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:id="@+id/lKEditTextConfirmPassword"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/lKEditTextPassword"
	        android:textColor="#FFFFFF"
			android:textColorHint="@color/bg_peach"
			android:inputType="textPassword"
	        android:hint="@string/confirm_password" />
	    
	    <se.lundakarnevalen.widget.LKEditText
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:id="@+id/lKEditTextMobilNbr"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/lKEditTextConfirmPassword"
	        android:textColor="#FFFFFF"
			android:textColorHint="@color/bg_peach"
			android:inputType="phone"
			android:digits="0123456789"
	        android:hint="@string/registration_mobilenbr" />
	    	    
	    
	    <se.lundakarnevalen.widget.LKTextViewBold
	        android:layout_marginTop="@dimen/vertical_margin"
	        android:textSize="18sp"
	        android:id="@+id/lKTextViewBold4"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/lKEditTextMobilNbr"
	        android:textColor="#FFFFFF"
	        android:text="@string/registration_choosesection" />
	    
	    <LinearLayout
	       	android:layout_marginTop="@dimen/vertical_margin"
	        android:id="@+id/sektionwrapper"
	        android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:layout_centerHorizontal="true"
        	android:orientation="horizontal" 
        	android:layout_below="@id/lKTextViewBold4">
	    	<LinearLayout
	       		android:layout_marginTop="@dimen/vertical_margin"
	        	android:id="@+id/leftsektionwrapper"
	        	android:layout_width="wrap_content"
        		android:layout_height="wrap_content" 
        		android:orientation="vertical" >
        		
	    	    <RadioButton android:id="@+id/radio_sektion_barnevalen"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_barnevalen"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/>
	    	    <RadioButton android:id="@+id/radio_sektion_biljetteriet"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_biljetteriet"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_bladderiet"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_bladderiet"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/>
        		<RadioButton android:id="@+id/radio_sektion_cirkusen"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_cirkusen"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/>
        		<RadioButton android:id="@+id/radio_sektion_dansen"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_dansen"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_ekonomi"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_ekonomi"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_fabriken"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_fabriken"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_festmasteriet"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_festmasteriet"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_filmen"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_filmen"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_kabare"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_kabare"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_klipperiet"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_klipperiet"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_kommunikation"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_kommunikation"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 	
        		<RadioButton android:id="@+id/radio_sektion_krogarna"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_krogarna"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
	    	</LinearLayout>
	        <LinearLayout
	       		android:layout_marginTop="@dimen/vertical_margin"
	        	android:id="@+id/rightsektionwrapper"
	        	android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:layout_marginLeft="@dimen/horizontal_margin"
	        	android:orientation="vertical" >
	    		<RadioButton android:id="@+id/radio_sektion_omradet"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_omradet"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/>
	    	    <RadioButton android:id="@+id/radio_sektion_musiken"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_musiken"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_nojessektionen"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_nojessektionen"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/>
        		<RadioButton android:id="@+id/radio_sektion_radion"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_radion"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/>
        		<RadioButton android:id="@+id/radio_sektion_revyn"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_revyn"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_shoppen"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_shoppen"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_showen"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_showen"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_snaxeriet"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_snaxeriet"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_sakerhet"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_sakerhet"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_tombola"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_tombola"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_taget"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_taget"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
        		<RadioButton android:id="@+id/radio_sektion_taltnojen"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_taltnojen"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 	
        		<RadioButton android:id="@+id/radio_sektion_vieriet"
	            	android:layout_width="wrap_content"
        			android:layout_height="wrap_content"
        			android:text="@string/sektion_vieriet"
        			android:textColor="#FFFFFF"
        			android:onClick="onSectionClicked"/> 
	    	</LinearLayout>
	    </LinearLayout>
	    
	    <!-- lägg in lista av alla sektioner -->
	    
	    <se.lundakarnevalen.widget.LKTextViewBold
	        android:layout_marginTop="@dimen/vertical_margin"
	        android:textSize="18sp"
	        android:id="@+id/lKTextViewBold5"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/sektionwrapper"
	        android:textColor="#FFFFFF"
	        android:text="@string/registration_shirtsize" />
	    
	    <RadioGroup 
	        android:id="@+id/radioGroup1"
	        android:layout_marginTop="@dimen/vertical_margin"
	        android:layout_below="@id/lKTextViewBold5" 
    		android:layout_width="fill_parent"
  			android:layout_height="wrap_content"
    		android:orientation="vertical">
    		<RadioButton android:id="@+id/radio_large"
        		android:layout_width="wrap_content"
        		android:layout_height="wrap_content"
        		android:text="L"
        		android:textColor="#FFFFFF"
        		android:onClick="onRadioButtonClicked"/>
    		<RadioButton android:id="@+id/radio_medium"
        		android:layout_marginTop="@dimen/vertical_margin_half"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
        		android:textColor="#FFFFFF"
        		android:text="M"
        		android:onClick="onRadioButtonClicked"/>
    		<RadioButton android:id="@+id/radio_small"
				android:layout_marginTop="@dimen/vertical_margin_half"
        		android:layout_width="wrap_content"
       			android:layout_height="wrap_content"
        		android:textColor="#FFFFFF"
        		android:text="S"
        		android:onClick="onRadioButtonClicked"/>
		</RadioGroup>
	    <se.lundakarnevalen.widget.LKButton
	        android:layout_marginTop="@dimen/vertical_margin"
	        android:id="@+id/confirm_button"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/radioGroup1"
	        android:textColor="#FFFFFF"
	        android:text="@string/registration_submit" />
	    <se.lundakarnevalen.widget.LKTextView
	        android:layout_marginTop="@dimen/vertical_margin_half"
	        android:id="@+id/lKTextView3"
	       	android:layout_width="wrap_content"
	       	android:layout_height="wrap_content"
	       	android:layout_below="@id/confirm_button"
	       	android:layout_centerHorizontal="true"
	       	android:textColor="#FFFFFF"
	       	android:textSize="10sp"
	    	android:gravity="center"
	       	android:text="@string/registration_submitinfo" />
	</RelativeLayout>
</ScrollView>