<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativelayout"
    android:layout_width="300dp"
    android:paddingBottom="0dp"
    android:paddingTop="20dp"
    android:layout_height="wrap_content" >

    <ImageView 
        android:id="@+id/sangbok_groups_inflated_groupheader_box"
        android:src="@drawable/songs_karnmel_box"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/> 

    <TextView
        android:id="@+id/sangbok_groups_inflated_groupheader_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/sangbok_groups_inflated_groupheader_box"
        android:layout_alignLeft="@+id/sangbok_groups_inflated_groupheader_box"
        android:layout_alignRight="@+id/sangbok_groups_inflated_groupheader_box"
        android:layout_margin="0dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:text="KARNEVALSMELODIN"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/sangbok_groups_inflated_groupheader_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sangbok_groups_inflated_groupheader_box"
        android:src="@drawable/songs_karnmel_shadow" />

</RelativeLayout>