<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:orientation="vertical" >

    <ProgressBar
        android:id="@+id/karnegram_full_size_spinner"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <include layout="@layout/fr_karnegram_row_item_full"
        android:id="@+id/karnegram_full_size"
        android:layout_width="match_parent"
        android:layout_centerHorizontal="true"
        android:contentDescription="@string/image"
        android:layout_above="@id/name" 
        android:layout_margin="20dp"
        android:layout_height="match_parent" >
    </include>
    
    <se.lundakarnevalen.widget.LKTextViewBold android:id="@+id/caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_alignParentBottom="true" />
    
    <se.lundakarnevalen.widget.LKTextViewBold android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_above="@id/caption"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content" />

</RelativeLayout>