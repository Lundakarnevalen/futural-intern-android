<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_margin="3dp"
        android:background="@drawable/id_card_bg" >

        <ImageView
            android:id="@+id/clouds_start"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/clouds" />

        <ImageView
            android:id="@+id/clouds_moving"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/clouds" />

        <ImageView
            android:id="@+id/clouds_moving_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/clouds" />
 
        <ImageView
            android:id="@+id/active"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/aktiv_icon" />

        <ImageView
            android:id="@+id/photo"
            android:layout_width="155dp"
            android:layout_height="match_parent"
            android:layout_below="@id/active"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="6dp"
            android:background="@color/peach"
            android:paddingBottom="30dp"
            android:paddingLeft="4dp"
            android:paddingRight="5dp"
            android:paddingTop="30dp" />

        <se.lundakarnevalen.widget.LKRobotTextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="40dp"
            android:layout_marginTop="6dp"
            android:layout_toRightOf="@id/active"
            android:gravity="right"
            android:text="LUNDAKARNEVALEN"
            android:textColor="@color/tainted_white"
            android:textSize="54dp" />

        <se.lundakarnevalen.widget.LKTextViewBold
            android:id="@+id/year"
            android:layout_width="wrap_content"
            android:layout_height="19dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="42dp"
            android:gravity="right|top"
            android:text="2014"
            android:textColor="@color/yellow"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/karne"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_below="@id/title"
            android:layout_marginBottom="17dp"
            android:layout_marginRight="20dp"
            android:paddingTop="3dp"
            android:background="@color/peach"
            android:gravity="right"
            android:paddingLeft="6dp"
            android:paddingRight="5dp"
            android:text="@string/karne_lang"
            android:textSize="9sp" />

        <ImageView
            android:id="@+id/stralfors"
            android:layout_width="match_parent"
            android:layout_height="11dp"
            android:layout_alignLeft="@id/karne"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@id/karne"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/stralfors" />

        <RelativeLayout
            android:id="@+id/uppg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="2dp"
            android:layout_toLeftOf="@id/karne"
            android:layout_toRightOf="@id/photo"
            android:background="@color/peach" >

            <TextView
                android:id="@+id/name"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="Namn   Markus Larsson"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/personnummer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginTop="12dp"
                android:paddingLeft="8dp"
                android:text="Personnummer   993123121"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/gatu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/personnummer"
                android:layout_marginTop="12dp"
                android:paddingLeft="8dp"
                android:text="Gatuadress   Åker gratis med"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/gatu"
                android:layout_marginTop="12dp"
                android:paddingLeft="8dp"
                android:text="Postadress   Skånetrafiken 12 april"
                android:textSize="9sp" />

            <TextView
                android:id="@+id/sektion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/post"
                android:layout_marginTop="12dp"
                android:paddingBottom="12dp"
                android:paddingLeft="8dp"
                android:text="Sektion   Kommunikation"
                android:textSize="9sp" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/starwars"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/uppg"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@id/karne"
            android:layout_toRightOf="@id/photo"
            android:src="@drawable/starwars" />
    </RelativeLayout>

</RelativeLayout>