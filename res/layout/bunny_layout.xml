<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:layout_marginTop="10dp"
        
        android:id="@+id/my_position"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
		android:layout_centerHorizontal="true"
        android:text="SKICKA MIN POSITION =)" />
    <Button 
        android:layout_below="@id/my_position"
        android:layout_marginTop="30dp"
        android:id="@+id/train_position"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:text="SKICKA TÅGETS POSITION" />

    <TextView 
        android:layout_width="wrap_content"
        android:id="@+id/text1"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/train_position"
        android:layout_below="@id/train_position"
        android:textColor="@color/black"
        android:text="Tåget auto"
        />
    <ToggleButton
        android:id="@+id/train_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/train_position"
        android:layout_below="@id/text1"
        android:text="Tåget auto" />
 
 <TextView
     android:id="@+id/text2" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/train_auto"
        android:textColor="@color/black"
        android:layout_alignLeft="@+id/train_position"
        android:text="Jag auto"
        />
   
    <ToggleButton
        android:id="@+id/my_auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/train_position"
        android:layout_below="@id/text2"
        android:text="Jag auto" />
    
</RelativeLayout>