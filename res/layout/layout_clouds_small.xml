<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@color/light_blue" >

    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/cloud2"
        android:contentDescription="@string/cloud"
        android:src="@drawable/cloud1" />

    <ImageView
        android:id="@+id/cloud4"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/cloud2"
        android:layout_marginRight="25dp"
        android:layout_marginTop="59dp"
        android:contentDescription="@string/cloud"
        android:src="@drawable/cloud4" />

    <ImageView
        android:id="@+id/cloud3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/cloud4"
        android:layout_marginTop="29dp"
        android:contentDescription="@string/cloud"
        android:src="@drawable/cloud3" />

    <ImageView
        android:id="@+id/cloud2"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="50dp"
        android:contentDescription="@string/cloud"
        android:src="@drawable/cloud2" />
    
</RelativeLayout>