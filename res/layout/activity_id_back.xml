<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue" >

    <LinearLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="@drawable/id_card_back_bg"
        android:orientation="vertical" >

        <se.lundakarnevalen.widget.LKGantFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal"
            android:text="GANT"
            android:textColor="@color/blue_gant"
            android:textSize="80dp" />

        <se.lundakarnevalen.widget.LKGantFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="UNIVERSITY STORE"
            android:textColor="@color/blue_gant"
            android:textSize="20dp" />

        <se.lundakarnevalen.widget.LKGantFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="15% RABATT"
            android:textColor="@color/blue_gant"
            android:textSize="24dp"
            android:textStyle="bold" />

        <se.lundakarnevalen.widget.LKGantFont
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:text="TILL ALLA LUNDSTUDENTER."
            android:textColor="@color/blue_gant"
            android:textSize="20dp" />

        <se.lundakarnevalen.widget.LKGantFont
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal|bottom"
            android:text="BANTORGET 4"
            android:textColor="@color/blue_gant"
            android:textSize="16dp" />
    </LinearLayout>

</RelativeLayout>