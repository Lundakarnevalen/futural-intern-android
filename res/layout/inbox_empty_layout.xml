<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
        
	    <ImageView android:id="@+id/sad_robot"
	        android:layout_height="wrap_content"
	        android:layout_width="wrap_content"
	        android:layout_centerHorizontal="true"
	        android:src="@drawable/sad_robot"/>
	    
	    <se.lundakarnevalen.widget.LKTextView
	        android:id="@+id/inbox_empty_text"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:text="@string/inbox_empty_text"
	        android:layout_centerHorizontal="true"
	        android:layout_below="@id/sad_robot"
	        android:textSize="25sp"
	        android:textColor="@color/light_peach"/>
	    
</RelativeLayout>
