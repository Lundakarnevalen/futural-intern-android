<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/fr_layout_music_play"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/abc_ic_go_search_api_holo_light" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/fr_layout_music_play"
        android:layout_below="@+id/fr_layout_music_play"
        android:layout_marginLeft="68dp" />

    <EditText
        android:id="@+id/lyric1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="38dp"
        android:layout_marginTop="24dp"
        android:ems="10" >
    </EditText>

    <EditText
        android:id="@+id/lyric2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lyric1"
        android:layout_below="@+id/lyric1"
        android:ems="10" />

    <EditText
        android:id="@+id/lyric3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lyric2"
        android:layout_below="@+id/lyric2"
        android:ems="10" />

</RelativeLayout>