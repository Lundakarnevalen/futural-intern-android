<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/instagram_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- SHADOW for picture -->

    <RelativeLayout
        android:id="@+id/karnegram_top_shadow"
        android:layout_width="wrap_content"
        android:layout_height="5dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/shadow" >
    </RelativeLayout>
    
    <GridView
        android:id="@+id/karnegram_gridview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:columnWidth="100dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:padding="@dimen/padding_sides"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" />

    <ImageView
        android:id="@+id/karnegram_camera_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:contentDescription="Camera"
        android:src="@drawable/camera" />

    <ImageView
        android:id="@+id/karnegram_full_size"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="10dp"
        android:scaleType="fitXY" />

    

</RelativeLayout>