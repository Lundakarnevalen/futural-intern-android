<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
     >
<ImageView 
		android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
        android:src="@drawable/waves"
        android:id="@+id/map_move"
        android:scaleX="2"
        android:scaleY="2"
	    />
    	
    <RelativeLayout
        android:id="@+id/map_upper_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true" 
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentTop="true"
         >

        <se.lundakarnevalen.widget.LKTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/white_bg_bottom_shadow"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/map_right_now"
            android:textColor="@color/red"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:lineSpacingMultiplier="1.2"
             />
  
        
        </RelativeLayout>

    <RelativeLayout
        android:id="@+id/map_lower_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:background="@drawable/white_bg_bottom_shadow" >

        <se.lundakarnevalen.widget.LKTextViewBold
            android:id="@+id/nbr_of"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textSize="20sp"
            android:text="@string/map_nbr_of_people"
            android:textColor="@color/red"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp"
            android:paddingBottom="1dp" />

        <se.lundakarnevalen.widget.LKTextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/nbr_of"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="@string/map_karnevalister" 
            android:textColor="@color/red"
			android:textSize="12sp"
			android:paddingLeft="3dp"
            android:paddingRight="3dp"    
            android:paddingBottom="3dp" />
			
             />

    
    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/map_lower_box"
        android:layout_below="@id/map_upper_box"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" >
        <ImageView
            android:id="@+id/map_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/desc_map"
            android:src="@drawable/map_skane" />
    </RelativeLayout>

    
</RelativeLayout>