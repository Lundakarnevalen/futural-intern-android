<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/menu_selector_bg" >

    <RelativeLayout
        android:id="@+id/wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/horizontal_margin_half"
        android:layout_marginRight="@dimen/horizontal_margin_half"
        android:layout_marginTop="@dimen/horizontal_margin"
        android:background="@color/menu_inbox_ctr_box"
         >

        <se.lundakarnevalen.widget.LKTextViewBold
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:padding="@dimen/horizontal_margin" />

        <RelativeLayout
            android:id="@+id/inbox_ctr_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/text" 
            android:layout_marginBottom="-30dp"
            android:layout_marginLeft="-24dp"
            android:layout_toRightOf="@id/text"
            android:visibility="gone" >

            <TextView
                android:id="@+id/inbox_ctr"          
                android:layout_width="20dp"
                android:layout_height="20dp"
            	android:background="@drawable/menu_inbox_counter_bg"
            	android:gravity="center"
                android:textColor="#FFFFFF" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>