<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/horizontal_margin"
    android:background="@drawable/menu_selector_bg">
    <View 
        android:id="@+id/bullet_image"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@color/bullet_grey"
        android:layout_centerVertical="true"/>
    <se.lundakarnevalen.widget.LKTextView 
        android:id="@+id/text"
        android:textSize="18sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/bullet_image"
        android:layout_marginLeft="@dimen/horizontal_margin"
        android:textColor="#FFFFFF"/>
    <RelativeLayout
        android:id="@+id/inbox_ctr_wrapper"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/menu_inbox_counter_bg"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/horizontal_margin"
        android:visibility="gone">
        <TextView
            android:id="@+id/inbox_ctr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:textColor="#FFFFFF" />
    </RelativeLayout>
</RelativeLayout>
