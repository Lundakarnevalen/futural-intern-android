<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    
    android:background="@color/light_blue" >

    <ImageView
        android:id="@+id/cloud2"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="28dp"
        android:contentDescription="@string/cloud"
        android:src="@drawable/cloud2" />

    <ImageView
        android:id="@+id/cloud1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/cloud2"
        android:contentDescription="@string/cloud"
        android:src="@drawable/cloud1" />

    <ImageView
        android:id="@+id/cloud3"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="58dp"
        android:contentDescription="@string/cloud"
        android:src="@drawable/cloud3" />

    <ImageView
        android:id="@+id/cloud4"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignBottom="@+id/cloud3"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="22dp"
        android:layout_marginRight="55dp"
        android:contentDescription="@string/cloud"
        android:src="@drawable/cloud4" />
    
</RelativeLayout>